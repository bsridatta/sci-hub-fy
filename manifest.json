{
  "manifest_version": 2,

  "name": "Sci-Hub-Fy",
  "description": "Free access to scientific articles through Sci-Hub service.",
  "version": "1.6",

  "permissions": [
     "activeTab",
     "tabs",
     "contextMenus",
     "storage"
  ],

  "icons": {
    "19": "img/icon.png",
    "128": "img/icon_store.png"
  },

  "browser_action": {
    "default_icon": "img/icon.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  }
}
